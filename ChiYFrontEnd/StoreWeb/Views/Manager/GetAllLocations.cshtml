@model IEnumerable<StoreDB.Models.Location>

@{
    ViewData["Title"] = "Location List";
}

<h1>Choose your location to restock</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("View Ticket Inventory", "GetProductStockByLocation", new { locationId = item.LocationId }) |
                @Html.ActionLink("View Order History", "GetOrdersByLocation", "Order", new { locationId = item.LocationId })
            </td>
        </tr>
}
    </tbody>
</table>
