@model StoreWeb.Models.ProductStock

@{
    ViewData["Title"] = "Restock Ticket Inventory";
}

<h1>Restock Ticket Inventory</h1>

<h4>Add to the inventory of the ticket category at your chosen location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProductStock">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuantityStocked" class="control-label"></label>
                <input asp-for="QuantityStocked" class="form-control" />
                <span asp-validation-for="QuantityStocked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LocationId" class="form-control" type="hidden" value=@ViewData["locationId"] />
            </div>
            <div class="form-group">
                <input asp-for="ProductId" class="form-control" type="hidden" value=@ViewData["productId"] />
            </div>
<div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
